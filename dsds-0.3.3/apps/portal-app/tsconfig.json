{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "composite": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@docs/*": ["./docs/*"],
      "@/components/*": ["../../packages/react/radix-ui/src/components"],
      "@/components/ui": ["../../packages/react/radix-ui/src/components/ui"],
      "@/hooks": ["../../packages/react/radix-ui/src/hooks"],
      "@/lib/utils": ["../../packages/react/radix-ui/src/lib/utils"],
      "@/components/icons": ["../../packages/react/radix-ui/src/components/icons"],
      "@dsds/react-radix-ui/*": ["../../packages/react/radix-ui/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "docs/**/*.mdx", "docs/**/*.{ts,tsx}", "app/**/*.mdx"],
  "exclude": ["node_modules", "dist/**/*", "docs/helpers/vue"],
  "references": [{ "path": "../../packages/react/radix-ui" }]
}
