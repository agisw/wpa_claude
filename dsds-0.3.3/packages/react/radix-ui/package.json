{
  "name": "@dsds/react-radix-ui",
  "version": "0.1.2",
  "author": "김용기, 조무영 <dsds.srv@samsung.com>",
  "description": "DS 디자인 시스템 기반의 커스텀 Radix-UI 라이브러리",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/src/index.d.ts",
  "style": "dist/styles.css",
  "module": "dist/index.js",
  "files": [
    "README.md",
    "dist"
  ],
  "exports": {
    ".": {
      "development": {
        "types": "./src/index.ts",
        "import": "./src/index.ts"
      },
      "types": "./dist/src/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./utils": {
      "development": {
        "types": "./src/lib/utils.ts",
        "import": "./src/lib/utils.ts"
      },
      "types": "./dist/src/lib/utils.d.ts",
      "import": "./dist/utils.js",
      "default": "./dist/utils.js"
    },
    "./styles.css": {
      "development": "./src/index.css",
      "default": "./dist/styles.css"
    }
  },
  "publishConfig": {
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/src/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/src/index.d.ts",
        "import": "./dist/index.js",
        "default": "./dist/index.js"
      },
      "./utils": {
        "types": "./dist/src/lib/utils.d.ts",
        "import": "./dist/utils.js",
        "default": "./dist/utils.js"
      },
      "./styles.css": "./dist/styles.css"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "build:offline": "cross-env BUILD_MODE=offline vite build",
    "build:standalone": "tsc -p tsconfig.build.json && BUILD_MODE=standalone vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:themes": "node ./scripts/build_themes.js",
    "build:css": "postcss src/index.css -o dist/index.css",
    "storybook": "cross-env BROWSER=none STORYBOOK_BASE_URL= storybook dev -p 6006",
    "deploy": "./scripts/deploy.sh",
    "shadcn": "dlx shadcn@latest",
    "build:storybook": "storybook build",
    "playwright:update-snapshots": "pnpm build:storybook && pnpm playwright test --update-snapshots && ./scripts/docker-test.sh --update-snapshots"
  },
  "peerDependencies": {
    "@dsds/fonts": "workspace:^",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "lucide-react": "^0.525.0",
    "react": "^19",
    "react-dom": "^19",
    "react-resizable-panels": "^3.0.2",
    "sonner": "^2.0.5",
    "tailwindcss": "^4.1.8",
    "tw-animate-css": "^1.3.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@playwright/test": "^1.53.2",
    "@storybook/addon-docs": "10.0.7",
    "@storybook/addon-vitest": "^10.0.7",
    "@storybook/react-vite": "10.0.7",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.16.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-highlight-words": "^0.20.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-compiler": "19.1.0-rc.1",
    "cross-env": "^10.0.0",
    "dedent": "^1.6.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react-compiler": "19.0.0-beta-af1b7da-20250417",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^10.0.7",
    "jsdom": "^26.1.0",
    "playwright": "^1.53.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "rollup-preserve-directives": "^1.1.3",
    "storybook": "^10.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.1.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-static-copy": "^3.1.0",
    "vitest": "^3.2.4"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-slider": "^1.3.6",
    "date-fns": "^4.1.0",
    "react-day-picker": "^9.8.0",
    "react-highlight-words": "^0.21.0"
  }
}
