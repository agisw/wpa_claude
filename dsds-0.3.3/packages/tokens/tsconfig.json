{
  "extends": "../../tsconfig.base.json", // 1. 루트의 기본 설정 상속
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "rootDir": ".",
    "composite": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "paths": {
      "@/*": ["./*"],
      "@docs/*": ["./docs/*"],
      "@/components/*": ["../react/radix-ui/src/components"],
      "@/components/ui": ["../react/radix-ui/src/components/ui"],
      "@/lib/utils": ["../react/radix-ui/src/lib/utils"],
      "@/components/icons": ["../react/radix-ui/src/components/icons"],
      "@dsds/react-radix-ui/*": ["../react/radix-ui/src/*"]
    }
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "../react/radix-ui" }
  ],
  "exclude": ["node_modules", "dist", "src/stories"]

}