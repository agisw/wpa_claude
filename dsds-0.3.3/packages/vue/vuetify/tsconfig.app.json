{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "docs/**/*.mdx", "docs/helpers/vue", "tests/**/*",],
  "exclude": ["src/**/__tests__/*", "docs/helpers/*.tsx"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@docs/helpers": ["./docs/helpers/vue/*"],
      "@docs/*": ["./docs/*"],
    }
  }
}
