{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist/types"
  },
  "include": [
    "src/**/*",
    "env.d.ts"
  ],
  "exclude": [
    "docs/**",                    // docs/ 디렉터리 전체 제외
    "src/stories/**",            // src/stories/ 디렉터리 전체 제외
    "src/**/*.stories.ts",       // 기존: .stories.ts 파일들 제외
    "src/**/*.test.ts",          // 기존: .test.ts 파일들 제외
    "node_modules"               // 기존: node_modules 제외
  ]
}